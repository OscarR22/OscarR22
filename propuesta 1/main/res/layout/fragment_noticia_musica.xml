<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DADADA"
    tools:context=".noticia_musica">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="700dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:layout_marginTop="110dp"
        android:elevation="100dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="titulo de la noticia "
                android:textAlignment="center"
                android:textColor="@color/TituloNoticiaC"
                android:textSize="30dp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/portadamus"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="La Playlist de la semana "
                android:textAlignment="center"
                android:textColor="#B7000000"
                android:textSize="25dp"
                android:textStyle="italic" />
//contenido de la noticia
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:text="Este fin de semana escucha en spotify lo mas escuchado en el transcurso de la semana por los usuarios...."
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/ContenidoNoticia"
                android:textStyle="bold|italic" />
//autor
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                android:text="by: Hipersonica/1h"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="8dp"
                android:textStyle="bold|italic"
                android:textColor="@color/autor"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>